  input
      padding: 0
  li
    list-style: none
  button
    font-size: 80%
  .sms-warning
    display: block
    text-align: center
    font-size: 65%
    width: 75%
    margin: auto
    margin-bottom: 5px
  .add-roster-player
    float: right
    span.fui-plus-16
      margin-right: 2px

.todo-search-field
  overflow: scroll
  font-size: 105%

